<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitPositive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--        <item name="colorPrimaryDark">@color/black</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Bottom navigation bar colour -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Button.Grey" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#313131</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/git_green</item>
    </style>
</resources>